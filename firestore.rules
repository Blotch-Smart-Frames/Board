rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isBoardMember(boardId) {
      let board = get(/databases/$(database)/documents/boards/$(boardId));
      return board != null
        && (board.data.ownerId == request.auth.uid
            || request.auth.uid in board.data.collaborators);
    }

    function isBoardOwner(boardId) {
      let board = get(/databases/$(database)/documents/boards/$(boardId));
      return board != null && board.data.ownerId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
    }

    // Boards collection
    match /boards/{boardId} {
      allow read: if isAuthenticated()
        && (resource.data.ownerId == request.auth.uid
            || request.auth.uid in resource.data.collaborators);
      allow create: if isAuthenticated()
        && request.resource.data.ownerId == request.auth.uid;
      allow update: if isAuthenticated() && isBoardMember(boardId);
      allow delete: if isAuthenticated() && isBoardOwner(boardId);

      // Lists subcollection
      match /lists/{listId} {
        allow read, write: if isAuthenticated() && isBoardMember(boardId);
      }

      // Tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if isAuthenticated() && isBoardMember(boardId);
      }

      // Labels subcollection
      match /labels/{labelId} {
        allow read, write: if isAuthenticated() && isBoardMember(boardId);
      }

      // Sprints subcollection
      match /sprints/{sprintId} {
        allow read, write: if isAuthenticated() && isBoardMember(boardId);
      }
    }
  }
}
